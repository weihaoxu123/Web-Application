<% include ../partials/header%>
<div class="container" style="margin-bottom: 40px;">
	<header class="jumbotron" style="padding-top: 0px; padding-bottom: 0px">
		<div class="container"  >
			<h1 >CampGround</h1>
			<p>Don't know what to say just some random words</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campground/new">Append new stuff</a>
			</p>
		</div>
