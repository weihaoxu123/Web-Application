	<div class="row text-center" style="display: flex; flex-wrap: wrap;" >
		<%	camp.forEach(function(element){%>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%=element.Address%>" style="height:300px">
