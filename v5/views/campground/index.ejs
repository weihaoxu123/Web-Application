<% include ../partials/header%>
<div class="container" style="margin-bottom: 40px;">
	<header class="jumbotron" style="padding-top: 0px; padding-bottom: 0px">
		<div class="container"  >
			<h1 >CampGround</h1>
			<p>Don't know what to say just some random words</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campground/new">Append new stuff</a>
			</p>
		</div>
	</header>



	<div class="row text-center" style="flex-wrap: wrap;" >
		<%	camp.forEach(function(element){%>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%=element.Address%>" style="height:300px">
					<div class="caption">
						<H4 style="display: inline;">     <%= element.Name%></H4>
						<H4 style="display: inline;">5.6</H4>
					</div>
					<p>
						<a class="btn btn-primary btn-large" href="/campground/<%= element._id%>">More Info</a>
					</p>
				</div>
			</div>
		<%		});%>
			
	</div>
	<div class="row text-center">
    <% if (pages && pages > 0) { %>
    <ul class="pagination text-center">
        <% if (current == 1) { %>
        <li class="disabled"><a>First</a></li>
        <% } else { %>
        <li><a href="/campground">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="disabled"><a>«</a></li>
        <% } else { %>
        <li><a href="/campground?page=<%= Number(current) - 1 %>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a><%= i %></a></li>
        <% } else { %>
        <li><a href="/campground?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>»</a></li>
        <% } else { %>
        <li><a href="/campground?page=<%= Number(current) + 1 %>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>Last</a></li>
        <% } else { %>
        <li><a href="/campground?page=<%= pages %>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</div>
</div>
<% include ../partials/footer%>
