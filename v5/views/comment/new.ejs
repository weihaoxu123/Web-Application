<% include ../partials/header%>
<style type="text/css">
.cleanfloat{
	margin-left: 11%;
}
.cleanfloat::after{display: block; clear: both; content:""; visibility: hidden; height: 0;}/*清浮动*/
.pop {list-style:none; float:left; font-size:30px; margin:8px; color:#b0c4de; cursor:pointer;}
.hs,.cs{color:#AEDD81;}/*五角星样式*/
@media screen and (max-width: 800px) {
	.cleanfloat{
		margin-left: 0px;
	}
    .pop{
    	font-size: 22px;
    	margin: 4px;
	}}
@media screen and (max-width: 500px) {
    .pop{
    	font-size: 18px;
    	margin: 1px;
	}}
</style>
<div class="container">
	<div class="row" >
		<h1 style="text-align: center;">Post New Review to <%=camp.Name%></h1>
		<div style="width:35%; margin:0 auto;">
			<form action="/campground/<%=camp._id%>/comment" method="post">
				<div class="form-group" style="margin-bottom: 5px;">
					<span for="name">Your Comment</span>
					<textarea class="form-control" required="required" rows="5" name="comment[text]" id="input1" placeholder="Text" style="overflow: auto;"></textarea>
				</div>
				<div class="form-group">
               		<input class="form-control" type="hidden" value=0 name="comment[Rating]" id="ll">
               		<!-- <span for="name">Rating?</span> -->
               		<ul class="cleanfloat">
					  	<li class="pop" >&#9733;</li>
						<li class="pop" >&#9733;</li>
						<li class="pop" >&#9733;</li>
						<li class="pop" >&#9733;</li>
						<li class="pop" >&#9733;</li>
					</ul>
					
                </div> 
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" onclick="checkForm()">Submit</button>
				</div>	
			</form>
			<div class="text-center" >
				<a href="/campground">Go to Campground</a>
			</div>	
		</div>
	</div>	
</div>
<% include ../partials/footer%>
